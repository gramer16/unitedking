<div class="jumbotron">
  <div class="left">
    <%= t('jumbotron_poolcleanertitle_html') %>
  
 </div>
 </div>
 <br>

<div class="left">
  <%= t('searchservice_html') %>
   <%= form_tag search_poolcleaners_path, method: :get do %>
          <p>
        <%= text_field :search, params[:search], placeholder: t('searchtextbox'), class: "form-control" %>
        <br>
         <%= submit_tag t('searchbtn'), name: nil ,class: "btn btn-success" %>
      </p>
    </div>
  <% end %>

<div class="thumbnail">
  <div class="center"> 
    <div class="row">
     <% @poolcleaners.each do |poolcleaner| %>
      <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(poolcleaner.image.url), poolcleaner %>
        <div class="caption">
          <h4><strong><%= poolcleaner.company_name %></strong></h4>
          <strong><th><%= label_tag :nil, t('servicecompanywebsite') %></th></strong><br>
            <%= link_to poolcleaner.company_website, poolcleaner.company_website %><br>
            <strong><th><%= label_tag :nil, t('servicecompanyphone') %></th></strong><br>
            <%= poolcleaner.company_phone %><br>
           <strong><th><%= label_tag :nil, t('servicecompanyaddress') %></th></strong><br>
           <%= poolcleaner.address %><br> 
           <strong><th><%= label_tag :nil, t('city') %></th></strong><%= poolcleaner.city %><br>
           <strong><th><%= label_tag :nil, t('zipcode') %></th></strong><br><%= poolcleaner.zipcode %><br>
           <br>
           
           <td><%= link_to 'Show', poolcleaner, class: "btn btn-success" %></td>
        
        <td><%= link_to 'Edit', edit_poolcleaner_path(poolcleaner), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', poolcleaner, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
        </div>
      </div>
    </div>
    <% end %>
    </div>

  </div>
</div> 


<br>
<br>

<% if user_signed_in? && current_user.admin? %>
<%= link_to t('add_service'), new_poolcleaner_path, class: "btn btn-success" %>
<% end %>
