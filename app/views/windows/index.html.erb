<div class="jumbotron">
  <div class="left">
    <%= t('jumbotron_windowtitle_html') %>
  
 </div>
 </div>
 <br>

<div class="left">
  <%= t('searchservice_html') %>
   <%= form_tag search_windows_path, method: :get do %>
          <p>
        <%= text_field :search, params[:search], placeholder: t('searchtextbox'), class: "form-control" %>
        <br>
         <%= submit_tag t('searchbtn'), name: nil ,class: "btn btn-success" %>
      </p>
    </div>
  <% end %>

<div class="thumbnail">
  <div class="center"> 
    <div class="row">
       <% @windows.each do |window| %>
      <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(window.image.url), window %>
        <div class="caption">
          <h4><strong><%= window.company_name %></strong></h4>
          <strong><th><%= label_tag :nil, t('servicecompanywebsite') %></th></strong><br>
            <%= link_to window.company_website, window.company_website %><br>
            <strong><th><%= label_tag :nil, t('servicecompanyphone') %></th></strong><br>
            <%= window.company_phone %><br>
           <strong><th><%= label_tag :nil, t('servicecompanyaddress') %></th></strong><br>
           <%= window.address %><br> 
           <strong><th><%= label_tag :nil, t('city') %></th></strong><%= window.city %><br>
           <strong><th><%= label_tag :nil, t('zipcode') %></th></strong><br><%= window.zipcode %><br>
           <br>
           
           <td><%= link_to 'Show', window, class: "btn btn-success" %></td>
        
        <td><%= link_to 'Edit', edit_window_path(window), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy',window, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
        </div>
      </div>
    </div>
    <% end %>
    </div>

  </div>
</div> 


<br>
<br>


<%= link_to t('add_service'), new_window_path, class: "btn btn-success" %>

