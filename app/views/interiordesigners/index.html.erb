<div class="jumbotron">
  <div class="left">
    <%= t('jumbotron_interiordesignertitle_html') %>
  
 </div>
 </div>

<div class="left">
  <%= t('searchservice_html') %>
   <%= form_tag search_interiordesigners_path, method: :get do %>
          <p>
        <%= text_field :search, params[:search], placeholder: t('searchtextbox'), class: "form-control" %>
        <br>
         <%= submit_tag t('searchbtn'), name: nil ,class: "btn btn-success" %>
      </p>
    </div>
  <% end %>

<div class="thumbnail">
  <div class="center"> 
    <div class="row">
     <% @interiordesigners.each do |interiordesigner| %>
      <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(interiordesigner.image.url), interiordesigner %>
        <div class="caption">
          <h4><strong><%= interiordesigner.company_name %></strong></h4>
          <strong><th><%= label_tag :nil, t('servicecompanywebsite') %></th></strong><br>
            <%= link_to interiordesigner.company_website, interiordesigner.company_website %><br>
            <strong><th><%= label_tag :nil, t('servicecompanyphone') %></th></strong><br>
            <%= interiordesigner.company_phone %><br>
           <strong><th><%= label_tag :nil, t('servicecompanyaddress') %></th></strong><br>
           <%= interiordesigner.address %><br> 
           <strong><th><%= label_tag :nil, t('city') %></th></strong><%= interiordesigner.city %><br>
           <strong><th><%= label_tag :nil, t('zipcode') %></th></strong><br><%= interiordesigner.zipcode %><br>
           <br>
           
           <td><%= link_to 'Show', interiordesigner, class: "btn btn-success" %></td>
        
        <td><%= link_to 'Edit', edit_interiordesigner_path(interiordesigner), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', interiordesigner, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
        </div>
      </div>
    </div>
    <% end %>
    </div>

  </div>
</div> 


<br>
<br>

<% if user_signed_in? && current_user.admin? %>
<%= link_to t('add_service'), new_interiordesigner_path, class: "btn btn-success" %>
<% end %>
