<div class="jumbotron">
  <div class="left">
    <%= t('jumbotron_missingservicestitle_html') %>
  
 </div>
 </div>
 <br>
 
<div class="left">
  <%= t('searchservice_html') %>
   <%= form_tag search_services_path, method: :get do %>
          <p>
        <%= text_field :search, params[:search], placeholder: t('searchtextbox'), class: "form-control" %>
        <br>
         <%= submit_tag t('searchbtn'), name: nil ,class: "btn btn-success" %>
      </p>
    </div>
  <% end %>

<div class="thumbnail">
  <div class="center"> 
    <div class="row">
       <% @services.each do |service| %>
      <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(service.image.url), service %>
        <div class="caption">
          <h4><strong><%= service.company_name %></strong></h4>
          <strong><th><%= label_tag :nil, t('servicecompanywebsite') %></th></strong><br>
            <%= link_to service.company_website, service.company_website %><br>
            <strong><th><%= label_tag :nil, t('servicecompanyphone') %></th></strong><br>
            <%= service.company_phone %><br>
           <strong><th><%= label_tag :nil, t('servicecompanyaddress') %></th></strong><br>
           <%= service.address %><br> 
           <strong><th><%= label_tag :nil, t('city') %></th></strong><%= service.city %><br>
           <strong><th><%= label_tag :nil, t('zipcode') %></th></strong><br><%= service.zipcode %><br>
           <br>
           
           <td><%= link_to 'Show', service, class: "btn btn-success" %></td>
        
        <td><%= link_to 'Edit', edit_service_path(service), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy',service, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
        </div>
      </div>
    </div>
    <% end %>
    </div>

  </div>
</div> 


<br>
<br>

<% if user_signed_in? && current_user.admin? %>
<%= link_to t('add_service'), new_service_path, class: "btn btn-success" %>
<% end %>