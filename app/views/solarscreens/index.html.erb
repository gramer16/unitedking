<div class="jumbotron">
  <div class="left">
    <%= t('jumbotron_solarscreentitle_html') %>
  
 </div>
 </div>
 <br>

<div class="left">
  <%= t('searchservice_html') %>
   <%= form_tag search_solarscreens_path, method: :get do %>
          <p>
        <%= text_field :search, params[:search], placeholder: t('searchtextbox'), class: "form-control" %>
        <br>
         <%= submit_tag t('searchbtn'), name: nil ,class: "btn btn-success" %>
      </p>
    </div>
  <% end %>

<div class="thumbnail">
  <div class="center"> 
    <div class="row">
       <% @solarscreens.each do |solarscreen| %>
      <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(solarscreen.image.url), solarscreen %>
        <div class="caption">
          <h4><strong><%= solarscreen.company_name %></strong></h4>
          <strong><th><%= label_tag :nil, t('servicecompanywebsite') %></th></strong><br>
            <%= link_to solarscreen.company_website, solarscreen.company_website %><br>
            <strong><th><%= label_tag :nil, t('servicecompanyphone') %></th></strong><br>
            <%= solarscreen.company_phone %><br>
           <strong><th><%= label_tag :nil, t('servicecompanyaddress') %></th></strong><br>
           <%= solarscreen.address %><br> 
           <strong><th><%= label_tag :nil, t('city') %></th></strong><%= solarscreen.city %><br>
           <strong><th><%= label_tag :nil, t('zipcode') %></th></strong><br><%= solarscreen.zipcode %><br>
           <br>
           
           <td><%= link_to 'Show', solarscreen, class: "btn btn-success" %></td>
        
        <td><%= link_to 'Edit', edit_solarscreen_path(solarscreen), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy',solarscreen, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
        </div>
      </div>
    </div>
    <% end %>
    </div>

  </div>
</div> 


<br>
<br>

<% if user_signed_in? && current_user.admin? %>
<%= link_to t('add_service'), new_solarscreen_path, class: "btn btn-success" %>
<% end %>