<table class="table table-striped table-bordered">
  <tr>
    <th>Image</th>
    <th>Package Title</th>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Action</th>
  </tr>
<% @subscriptionpackages.each do |subscriptionpackage| %>
<tr>
  <td><%= image_tag subscriptionpackage.image.url(:thumb) %></td>
  <td><%= subscriptionpackage.package_title %></td>
  <td><%= subscriptionpackage.package_name %></td>
  <td><%= subscriptionpackage.package_description %></td>
  <td><%= subscriptionpackage.price %></td>

  <td>
    <div class="btn-group">
       <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Action <span class="caret"></span>
          </button>
    
    <ul class="dropdown-menu" role="menu">
    <%= link_to 'Show', subscriptionpackage, class: "btn btn-warning" %></td>
        
        <td><%= link_to 'Edit', edit_subscriptionpackage_path(subscriptionpackage), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', subscriptionpackage, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %>
        </ul>
        </div>
        </td>

</tr>
<% end %>
</table>

<br>

<%= link_to 'New Subscriptionpackage', new_subscriptionpackage_path, class: "btn btn-warning", data: { no_turbolink: true } %>

