<%= t('searchresults_html') %>
<div class="thumbnail">
  <div class="center"> 
    <div class="row">
         <% @septics.each do |septic| %>
      <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(septic.image.url), septic %>
        <div class="caption">
          <h4><strong><%= septic.company_name %></strong></h4>
          <strong><th><%= label_tag :nil, t('servicecompanywebsite') %></th></strong><br>
            <%= link_to septic.company_website, septic.company_website %><br>
            <strong><th><%= label_tag :nil, t('servicecompanyphone') %></th></strong><br>
            <%= septic.company_phone %><br>
           <strong><th><%= label_tag :nil, t('servicecompanyaddress') %></th></strong><br>
           <%= septic.address %><br> 
           <strong><th><%= label_tag :nil, t('city') %></th></strong><%= septic.city %><br>
           <strong><th><%= label_tag :nil, t('zipcode') %></th></strong><br><%= septic.zipcode %><br>
           <br>
           
           <td><%= link_to 'Show', septic, class: "btn btn-success" %></td>
        
        <td><%= link_to 'Edit', edit_septic_path(septic), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', septic, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
        </div>
      </div>
    </div>
    <% end %>
    </div>

  </div>
</div>   
   
<%= link_to t('back'), septics_path, class: "btn btn-link"  %>