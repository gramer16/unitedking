<%= t('searchresults_html') %>
<div class="thumbnail">
  <div class="center"> 
    <div class="row">
        <% @poolrepairs.each do |poolrepair| %>
      <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(poolrepair.image.url), poolrepair %>
        <div class="caption">
          <h4><strong><%= poolrepair.company_name %></strong></h4>
          <strong><th><%= label_tag :nil, t('servicecompanywebsite') %></th></strong><br>
            <%= link_to poolrepair.company_website, poolrepair.company_website %><br>
            <strong><th><%= label_tag :nil, t('servicecompanyphone') %></th></strong><br>
            <%= poolrepair.company_phone %><br>
           <strong><th><%= label_tag :nil, t('servicecompanyaddress') %></th></strong><br>
           <%= poolrepair.address %><br> 
           <strong><th><%= label_tag :nil, t('city') %></th></strong><%= poolrepair.city %><br>
           <strong><th><%= label_tag :nil, t('zipcode') %></th></strong><br><%= poolrepair.zipcode %><br>
           <br>
           
           <td><%= link_to 'Show', poolrepair, class: "btn btn-success" %></td>
        
        <td><%= link_to 'Edit', edit_poolrepair_path(poolrepair), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', poolrepair, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
        </div>
      </div>
    </div>
    <% end %>
    </div>

  </div>
</div>   
   
<%= link_to t('back'), poolrepairs_path, class: "btn btn-link"  %>