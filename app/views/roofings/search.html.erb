<%= t('searchresults_html') %>
<div class="thumbnail">
  <div class="center"> 
    <div class="row">
         <% @roofings.each do |roofing| %>
      <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(roofing.image.url), roofing %>
        <div class="caption">
          <h4><strong><%= roofing.company_name %></strong></h4>
          <strong><th><%= label_tag :nil, t('servicecompanywebsite') %></th></strong><br>
            <%= link_to roofing.company_website, roofing.company_website %><br>
            <strong><th><%= label_tag :nil, t('servicecompanyphone') %></th></strong><br>
            <%= roofing.company_phone %><br>
           <strong><th><%= label_tag :nil, t('servicecompanyaddress') %></th></strong><br>
           <%= roofing.address %><br> 
           <strong><th><%= label_tag :nil, t('city') %></th></strong><%= roofing.city %><br>
           <strong><th><%= label_tag :nil, t('zipcode') %></th></strong><br><%= roofing.zipcode %><br>
           <br>
           
           <td><%= link_to 'Show', roofing, class: "btn btn-success" %></td>
        
        <td><%= link_to 'Edit', edit_roofing_path(roofing), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', roofing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
        </div>
      </div>
    </div>
    <% end %>
    </div>

  </div>
</div>   
   
<%= link_to t('back'), roofings_path, class: "btn btn-link"  %>