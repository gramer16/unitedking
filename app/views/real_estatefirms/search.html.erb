<%= t('searchresults_html') %>
<div class="thumbnail">
  <div class="center"> 
    <div class="row">
         <% @real_estatefirms.each do |real_estatefirm| %>
      <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(real_estatefirm.image.url), real_estatefirm %>
        <div class="caption">
          <h4><strong><%= real_estatefirm.company_name %></strong></h4>
          <strong><th><%= label_tag :nil, t('servicecompanywebsite') %></th></strong><br>
            <%= link_to real_estatefirm.company_website, real_estatefirm.company_website %><br>
            <strong><th><%= label_tag :nil, t('servicecompanyphone') %></th></strong><br>
            <%= real_estatefirm.company_phone %><br>
           <strong><th><%= label_tag :nil, t('servicecompanyaddress') %></th></strong><br>
           <%= real_estatefirm.address %><br> 
           <strong><th><%= label_tag :nil, t('city') %></th></strong><%= real_estatefirm.city %><br>
           <strong><th><%= label_tag :nil, t('zipcode') %></th></strong><br><%= real_estatefirm.zipcode %><br>
           <br>
           
           <td><%= link_to 'Show', real_estatefirm, class: "btn btn-success" %></td>
        
        <td><%= link_to 'Edit', edit_real_estatefirm_path(real_estatefirm), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', real_estatefirm, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
        </div>
      </div>
    </div>
    <% end %>
    </div>

  </div>
</div>   
   
<%= link_to t('back'), real_estatefirms_path, class: "btn btn-link"  %>