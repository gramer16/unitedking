<div class="center">
  <h2>Your Sales History</h2>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th>Image</th>
    <th>Package Item</th>
    <th>Price</th>
    <th>Customer First Name</th>
     <th>Customer Last Name</th>
    <th>Date Sold</th>
  </tr>
<% @orders.each do |order| %>
<tr>
  <td class="center"><%= image_tag subscriptionpackage.image.url(:thumb) %></td>
  <td class="center"><%= order.subscriptionpackage.package_name %></td>
  <td class="center"><%= order.subscriptionpackage.price1 %></td>
  <td class="center"><%= order.buyer.first_name %></td>
  <td class="center"><%= order.buyer.last_name %></td>
  <td class="center"><%= order.created_at.strftime("%B %-d, %Y") %></td>

  <td>
    <div class="btn-group">
       <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Action <span class="caret"></span>
          </button>
    
    <ul class="dropdown-menu" role="menu">
    <li><%= link_to 'Show', subscriptionpackage, class: "btn btn-warning" %></li>
        
        <li>><%= link_to 'Edit', edit_subscriptionpackage_path(subscriptionpackage), class: "btn btn-warning" %></li>
        <li><%= link_to 'Destroy', subscriptionpackage, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %></li>
        </ul>
        </div>
        </td>

</tr>
<% end %>
</table>

<br>

<%= link_to 'New Subscriptionpackage', new_subscriptionpackage_path, class: "btn btn-warning", data: { no_turbolink: true }  %>
