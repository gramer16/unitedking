<%= t('searchresults_html') %>
<div class="thumbnail">
  <div class="center"> 
    <div class="row">
        <% @privatefirms.each do |privatefirm| %>
      <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(privatefirm.image.url), privatefirm %>
        <div class="caption">
          <h4><strong><%= privatefirm.company_name %></strong></h4>
          <strong><th><%= label_tag :nil, t('servicecompanywebsite') %></th></strong><br>
            <%= link_to privatefirm.company_website, privatefirm.company_website %><br>
            <strong><th><%= label_tag :nil, t('servicecompanyphone') %></th></strong><br>
            <%= privatefirm.company_phone %><br>
           <strong><th><%= label_tag :nil, t('servicecompanyaddress') %></th></strong><br>
           <%= privatefirm.address %><br> 
           <strong><th><%= label_tag :nil, t('city') %></th></strong><%= privatefirm.city %><br>
           <strong><th><%= label_tag :nil, t('zipcode') %></th></strong><br><%= privatefirm.zipcode %><br>
           <br>
           
           <td><%= link_to 'Show', privatefirm, class: "btn btn-success" %></td>
        
        <td><%= link_to 'Edit', edit_privatefirm_path(privatefirm), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', privatefirm, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
        </div>
      </div>
    </div>
    <% end %>
    </div>

  </div>
</div>   
   
<%= link_to t('back'), privatefirms_path, class: "btn btn-link"  %>