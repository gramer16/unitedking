<%= t('searchresults_html') %>
<div class="thumbnail">
  <div class="center"> 
    <div class="row">
     <% @arquitects.each do |arquitect| %>
      <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(arquitect.image.url), arquitect %>
        <div class="caption">
          <h4><strong><%= arquitect.company_name %></strong></h4>
          <strong><th><%= label_tag :nil, t('servicecompanywebsite') %></th></strong><br>
            <%= link_to arquitect.company_website, arquitect.company_website %><br>
            <strong><th><%= label_tag :nil, t('servicecompanyphone') %></th></strong><br>
            <%= arquitect.company_phone %><br>
           <strong><th><%= label_tag :nil, t('servicecompanyaddress') %></th></strong><br>
           <%= arquitect.address %><br> 
           <strong><th><%= label_tag :nil, t('city') %></th></strong><%= arquitect.city %><br>
           <strong><th><%= label_tag :nil, t('zipcode') %></th></strong><br><%= arquitect.zipcode %><br>
           <br>
           
           <td><%= link_to 'Show', arquitect, class: "btn btn-success" %></td>
        
        <td><%= link_to 'Edit', edit_arquitect_path(arquitect), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', arquitect, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
        </div>
      </div>
    </div>
    <% end %>
    </div>

  </div>
</div>

   

<br>
<br>


<%= link_to t('back'), arquitects_path, class: "btn btn-link" %>
