<div class="jumbotron">
  <div class="left">
    <%= t('jumbotron_homeinspectortitle_html') %>
  
 </div>
 </div>

<div class="left">
  <%= t('searchservice_html') %>
   <%= form_tag search_homeinspectors_path, method: :get do %>
          <p>
        <%= text_field :search, params[:search], placeholder: t('searchtextbox'), class: "form-control" %>
        <br>
         <%= submit_tag t('searchbtn'), name: nil ,class: "btn btn-success" %>
      </p>
    </div>
  <% end %>

<div class="thumbnail">
  <div class="center"> 
    <div class="row">
     <% @homeinspectors.each do |homeinspector| %>
      <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(homeinspector.image.url), homeinspector %>
        <div class="caption">
          <h4><strong><%= homeinspector.company_name %></strong></h4>
          <strong><th><%= label_tag :nil, t('servicecompanywebsite') %></th></strong><br>
            <%= link_to homeinspector.company_website, homeinspector.company_website %><br>
            <strong><th><%= label_tag :nil, t('servicecompanyphone') %></th></strong><br>
            <%= homeinspector.company_phone %><br>
           <strong><th><%= label_tag :nil, t('servicecompanyaddress') %></th></strong><br>
           <%= homeinspector.address %><br> 
           <strong><th><%= label_tag :nil, t('city') %></th></strong><%= homeinspector.city %><br>
           <strong><th><%= label_tag :nil, t('zipcode') %></th></strong><br><%= homeinspector.zipcode %><br>
           <br>
           
           <td><%= link_to 'Show', homeinspector, class: "btn btn-success" %></td>
        
        <td><%= link_to 'Edit', edit_homeinspector_path(homeinspector), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', homeinspector, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
        </div>
      </div>
    </div>
    <% end %>
    </div>

  </div>
</div> 


<br>
<br>

<% if user_signed_in? && current_user.admin? %>
<%= link_to t('add_service'), new_homeinspector_path, class: "btn btn-success" %>
<% end %>
