<%= t('searchresults_html') %>
<div class="thumbnail">
  <div class="center"> 
    <div class="row">
        <% @taxspecialists.each do |taxspecialist| %>
      <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(taxspecialist.image.url), taxspecialist %>
        <div class="caption">
          <h4><strong><%= taxspecialist.company_name %></strong></h4>
          <strong><th><%= label_tag :nil, t('servicecompanywebsite') %></th></strong><br>
            <%= link_to taxspecialist.company_website, taxspecialist.company_website %><br>
            <strong><th><%= label_tag :nil, t('servicecompanyphone') %></th></strong><br>
            <%= taxspecialist.company_phone %><br>
           <strong><th><%= label_tag :nil, t('servicecompanyaddress') %></th></strong><br>
           <%= taxspecialist.address %><br> 
           <strong><th><%= label_tag :nil, t('city') %></th></strong><%= taxspecialist.city %><br>
           <strong><th><%= label_tag :nil, t('zipcode') %></th></strong><br><%= taxspecialist.zipcode %><br>
           <br>
           
           <td><%= link_to 'Show', taxspecialist, class: "btn btn-success" %></td>
        
        <td><%= link_to 'Edit', edit_taxspecialist_path(taxspecialist), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', taxspecialist, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
        </div>
      </div>
    </div>
    <% end %>
    </div>

  </div>
</div>   
   
<%= link_to t('back'), taxspecialists_path, class: "btn btn-link"  %>