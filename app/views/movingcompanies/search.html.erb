<%= t('searchresults_html') %>
<div class="thumbnail">
  <div class="center"> 
    <div class="row">
      <% @movingcompanies.each do |movingcompany| %>
      <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(movingcompany.image.url), movingcompany %>
        <div class="caption">
          <h4><strong><%= movingcompany.company_name %></strong></h4>
          <strong><th><%= label_tag :nil, t('servicecompanywebsite') %></th></strong><br>
            <%= link_to movingcompany.company_website, movingcompany.company_website %><br>
            <strong><th><%= label_tag :nil, t('servicecompanyphone') %></th></strong><br>
            <%= movingcompany.company_phone %><br>
           <strong><th><%= label_tag :nil, t('servicecompanyaddress') %></th></strong><br>
           <%= movingcompany.address %><br> 
           <strong><th><%= label_tag :nil, t('city') %></th></strong><%= movingcompany.city %><br>
           <strong><th><%= label_tag :nil, t('zipcode') %></th></strong><br><%= movingcompany.zipcode %><br>
           <br>
           
           <td><%= link_to 'Show', movingcompany, class: "btn btn-success" %></td>
        
        <td><%= link_to 'Edit', edit_movingcompany_path(movingcompany), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', movingcompany, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
        </div>
      </div>
    </div>
    <% end %>
    </div>

  </div>
</div>   
   
<%= link_to t('back'), movingcompanys_path, class: "btn btn-link"  %>