<%= t('searchresults_html') %>
<div class="thumbnail">
  <div class="center"> 
    <div class="row">
      <% @paintings.each do |painting| %>
      <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(painting.image.url), painting %>
        <div class="caption">
          <h4><strong><%= painting.company_name %></strong></h4>
          <strong><th><%= label_tag :nil, t('servicecompanywebsite') %></th></strong><br>
            <%= link_to painting.company_website, painting.company_website %><br>
            <strong><th><%= label_tag :nil, t('servicecompanyphone') %></th></strong><br>
            <%= painting.company_phone %><br>
           <strong><th><%= label_tag :nil, t('servicecompanyaddress') %></th></strong><br>
           <%= painting.address %><br> 
           <strong><th><%= label_tag :nil, t('city') %></th></strong><%= painting.city %><br>
           <strong><th><%= label_tag :nil, t('zipcode') %></th></strong><br><%= painting.zipcode %><br>
           <br>
           
           <td><%= link_to 'Show', painting, class: "btn btn-success" %></td>
        
        <td><%= link_to 'Edit', edit_painting_path(painting), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', painting, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
        </div>
      </div>
    </div>
    <% end %>
    </div>

  </div>
</div>   
   
<%= link_to t('back'), paintings_path, class: "btn btn-link"  %>