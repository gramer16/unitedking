<%= t('searchresults_html') %>
<div class="thumbnail">
  <div class="center"> 
    <div class="row">
      <% @molds.each do |mold| %>
      <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(mold.image.url), mold %>
        <div class="caption">
          <h4><strong><%= mold.company_name %></strong></h4>
          <strong><th><%= label_tag :nil, t('servicecompanywebsite') %></th></strong><br>
            <%= link_to mold.company_website, mold.company_website %><br>
            <strong><th><%= label_tag :nil, t('servicecompanyphone') %></th></strong><br>
            <%= mold.company_phone %><br>
           <strong><th><%= label_tag :nil, t('servicecompanyaddress') %></th></strong><br>
           <%= mold.address %><br> 
           <strong><th><%= label_tag :nil, t('city') %></th></strong><%= mold.city %><br>
           <strong><th><%= label_tag :nil, t('zipcode') %></th></strong><br><%= mold.zipcode %><br>
           <br>
           
           <td><%= link_to 'Show', mold, class: "btn btn-success" %></td>
        
        <td><%= link_to 'Edit', edit_mold_path(mold), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', mold, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
        </div>
      </div>
    </div>
    <% end %>
    </div>

  </div>
</div>   
   
<%= link_to t('back'), molds_path, class: "btn btn-link"  %>