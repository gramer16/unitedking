  <div class="jumbotron">
  <div class="left">
    <%= t('jumbotron_airconditionertitle_html') %>
  
 </div>
 </div>

   <div class="left"> 
    <%= t('searchservice_html') %>
   <%= form_tag search_airconditioners_path, method: :get do %>
          <p>
        <%= text_field :search, params[:search], placeholder: t('searchtextbox') class: "form-control" %>
        <br>
         <%= submit_tag t('searchbtn'), name: nil ,class: "btn btn-success" %>
      </p>
    </div>
  <% end %>

<div class="thumbnail">
  <div class="center"> 
    <div class="row">
     <% @airconditioners.each do |airconditioner| %>
      <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(airconditioner.image.url), airconditioner %>
        <div class="caption">
          <h4><strong><%= airconditioner.company_name %></strong></h4>
          <strong><th><%= label_tag :nil, t('servicecompanywebsite') %></th></strong><br>
            <%= link_to airconditioner.company_website, airconditioner.company_website %><br>
            <strong><th><%= label_tag :nil, t('servicecompanyphone') %></th></strong><br>
            <%= airconditioner.company_phone %><br>
           <strong><th><%= label_tag :nil, t('servicecompanyaddress') %></th></strong><br>
           <%= airconditioner.address %><br> 
           <strong><th><%= label_tag :nil, t('city') %></th></strong><%= airconditioner.city %><br>
           <strong><th><%= label_tag :nil, t('zipcode') %></th></strong><br><%= airconditioner.zipcode %><br>
           <br>
           
           <td><%= link_to 'Show', airconditioner, class: "btn btn-success" %></td>
        
        <td><%= link_to 'Edit', edit_airconditioner_path(airconditioner), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', airconditioner, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
        </div>
      </div>
    </div>
    <% end %>
    </div>

  </div>
</div>   
   

<br>
<br>
<% if user_signed_in? && current_user.admin? %>
<%= link_to t('add_service'), new_airconditioner_path, class: "btn btn-success" %>
<% end %>
 