<div class="jumbotron">
  <div class="left">
    <%= t('jumbotron_subscriptiontitle_html') %>
  
 </div>
 </div>
 <br>
 <br>

<table class="table table-striped table-bordered">
  <tr>
    <%= t('image_html') %>
    <%= t('companynamesubscription_html') %>
    <%= t('companysitesubscription_html') %>
    <%= t('addresssubscription_html') %>
    <%= t('citysubscription_html') %>
    <%= t('zipcodesubscription_html') %>
    <%= t('phonesubscription_html') %>
    <%= t('actionsubscription_html') %>
  </tr>

  <% @subscriptions.each do |subscription| %>
    <tr>
      <%= link_to image_tag(subscription.image.url), subscription %>
      <strong><td><%= subscription.company_name %></td></strong>
      <td><%= link_to subscription.website, subscription.website %></td>
      <td><%= subscription.address %></td>
      <td><%= subscription.city %></td>
      <td><%= subscription.zipcode %></td>
      <td><%= subscription.phone %></td>
      <td>
        <div class="btn-group">
          <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
            Action <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "View", subscription, class: "btn btn-link" %></li>
            <li><%= link_to "Edit", edit_subscription_path(subscription), class: "btn btn-link" %></li>
            <% if user_signed_in? && current_user.admin? %>
            <li><%= link_to 'Destroy', subscription, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" %></li>
            <% end %>
          </ul>
        </div>
      </td>
    </tr>
  <% end %>
</table>

