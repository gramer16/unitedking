<%= t('searchresults_html') %>
<div class="thumbnail">
  <div class="center"> 
    <div class="row">
     <% @framings.each do |framing| %>
      <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(framing.image.url), framing %>
        <div class="caption">
          <h4><strong><%= framing.company_name %></strong></h4>
          <strong><th><%= label_tag :nil, t('servicecompanywebsite') %></th></strong><br>
            <%= link_to framing.company_website, framing.company_website %><br>
            <strong><th><%= label_tag :nil, t('servicecompanyphone') %></th></strong><br>
            <%= framing.company_phone %><br>
           <strong><th><%= label_tag :nil, t('servicecompanyaddress') %></th></strong><br>
           <%= framing.address %><br> 
           <strong><th><%= label_tag :nil, t('city') %></th></strong><%= framing.city %><br>
           <strong><th><%= label_tag :nil, t('zipcode') %></th></strong><br><%= framing.zipcode %><br>
           <br>
           
           <td><%= link_to 'Show', framing, class: "btn btn-success" %></td>
        
        <td><%= link_to 'Edit', edit_framing_path(framing), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', framing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
        </div>
      </div>
    </div>
    <% end %>
    </div>

  </div>
</div>   
   
<%= link_to t('back'), framings_path, class: "btn btn-link"  %>