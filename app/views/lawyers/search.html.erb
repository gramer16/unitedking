<%= t('searchresults_html') %>
<div class="thumbnail">
  <div class="center"> 
    <div class="row">
      <% @lawyers.each do |lawyer| %>
      <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(lawyer.image.url), lawyer %>
        <div class="caption">
          <h4><strong><%= lawyer.company_name %></strong></h4>
          <strong><th><%= label_tag :nil, t('servicecompanywebsite') %></th></strong><br>
            <%= link_to lawyer.company_website, lawyer.company_website %><br>
            <strong><th><%= label_tag :nil, t('servicecompanyphone') %></th></strong><br>
            <%= lawyer.company_phone %><br>
           <strong><th><%= label_tag :nil, t('servicecompanyaddress') %></th></strong><br>
           <%= lawyer.address %><br> 
           <strong><th><%= label_tag :nil, t('city') %></th></strong><%= lawyer.city %><br>
           <strong><th><%= label_tag :nil, t('zipcode') %></th></strong><br><%= lawyer.zipcode %><br>
           <br>
           
           <td><%= link_to 'Show', lawyer, class: "btn btn-success" %></td>
        
        <td><%= link_to 'Edit', edit_lawyer_path(lawyer), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', lawyer, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
        </div>
      </div>
    </div>
    <% end %>
    </div>

  </div>
</div>   
   
<%= link_to t('back'), lawyers_path, class: "btn btn-link"  %>