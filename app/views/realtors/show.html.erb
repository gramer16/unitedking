<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
       <%= image_tag @realtor.image.url %>
       <br> 
      <strong><%= @realtor.company_name %></strong>
      <br>
      <br>
      <strong><%= label_tag :nil, t('servicecompanywebsite') %></strong>  
      <%= link_to @realtor.company_website, @realtor.company_website %><br>
      
      
      <strong><%= label_tag :nil, t('companycontactname') %></strong>  
     <%= @realtor.contact_name %>
     <br>
      <strong><%= label_tag :nil, t('companyservicephone') %></strong> 
     <%= @realtor.company_phone %><br>
     <strong><%= label_tag :nil, t('servicecompanyaddress') %></strong>  
